<header class=header_links>
<%= link_to "Pet Index", "/pets" %>
<%= link_to "Shelter Index", "/shelters" %>
</header>

<h1><a href="/shelters/<%= @shelter.id %>"><%= @shelter.name %></a></h1>
<ul id=shelter_info>
  <li>Address: <%= @shelter.address %></li>
  <li>City: <%= @shelter.city %></li>
  <li>State: <%= @shelter.state %></li>
  <li>Zipcode: <%= @shelter.zip %></li>
</ul>

<section>
<p id=link_to_pets_of_shelter><%= link_to "#{@shelter.name} Pets", "/shelters/#{@shelter.id}/pets" %></p><br>
<p class=update_button><%= link_to "Update Shelter", "/shelters/#{@shelter.id}/edit" %></p>
<p class=delete_button><%= link_to "Delete #{@shelter.name}", "/shelters/#{@shelter.id}", method: :delete %></p>
</section>
