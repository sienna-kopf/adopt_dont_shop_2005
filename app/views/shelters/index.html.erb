<%= link_to "Pet Index", "/pets" %>
<%= link_to "Shelter Index", "/shelters" %>

<h1>All Shelters</h1>

<% @shelters.each do |shelter| %>
  <h3><a href="/shelters/<%= shelter.id %>"><%= shelter.name %></a></h3>
  <%= link_to "Update #{shelter.name}", "/shelters/#{shelter.id}/edit" %>
  <%= link_to "Delete #{shelter.name}", "/shelters/#{shelter.id}", method: :delete %>
<% end %>

<%= link_to "New Shelter", "/shelters/new" %>
